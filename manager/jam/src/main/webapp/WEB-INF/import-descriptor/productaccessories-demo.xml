<import-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/schema/import-descriptor.xsd">

    <entity-type>org.yes.cart.domain.entity.ProductAssociation</entity-type>

    <import-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name-mask>productaccessories(.*).csv(.*)</file-name-mask>
        <ignore-first-line>true</ignore-first-line>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </import-file-descriptor>

    <select-sql>select p from ProductAssociationEntity p where p.product.code = {product} and p.productAssociated.code = {productAssociated}</select-sql>

    <import-columns>

        <!-- association code -->
        <column-descriptor>
            <column-index>0</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.Association</entity-type>
            <name>association</name>
            <lookup-query>select a from AssociationEntity a where a.code = {association}</lookup-query>
        </column-descriptor>

        <!-- product code -->
        <column-descriptor>
            <column-index>1</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.Product</entity-type>
            <name>product</name>
            <lookup-query>select p from ProductEntity p where p.code = {product}</lookup-query>
        </column-descriptor>

        <!-- associated product code -->
        <column-descriptor>
            <column-index>2</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.Product</entity-type>
            <name>productAssociated</name>
            <lookup-query>select p from ProductEntity p where p.code = {productAssociated}</lookup-query>
        </column-descriptor>

        <!-- accessories rank -->
        <column-descriptor>
            <column-index>3</column-index>
            <field-type>FIELD</field-type>
            <data-type>INT</data-type>
            <name>rank</name>
        </column-descriptor>

    </import-columns>
</import-descriptor>