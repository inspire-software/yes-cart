<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="xmlFastBulkExportServiceHandlerMapPriceRules" class="org.yes.cart.util.spring.LinkedHashMapBean">
        <constructor-arg ref="xmlFastBulkExportServiceHandlerMap"/>
        <property name="extension">
            <map  key-type="java.lang.String"
                  value-type="org.yes.cart.bulkexport.xml.XmlEntityExportHandler">
                <entry key="PRICERULE">
                    <bean class="org.yes.cart.bulkexport.xml.impl.SkuPriceRuleXmlEntityHandler"/>
                </entry>
                <entry key="PRICERULE_PRETTY">
                    <bean class="org.yes.cart.bulkexport.xml.impl.SkuPriceRuleXmlEntityHandler">
                        <property name="prettyPrint" value="true"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <!-- ################################ Register module  ####################################################### -->

    <bean class="org.yes.cart.env.impl.ModuleImpl">
        <property name="functionalArea" value="marketing"/>
        <property name="name" value="int-module-marketing-pricerules"/>
        <property name="subName" value="manager-export-ext"/>
    </bean>

</beans>

