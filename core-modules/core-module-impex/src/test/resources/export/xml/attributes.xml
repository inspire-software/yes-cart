<export-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="file:../../../../../../../domain-api/src/main/resources/META-INF/schema/export-descriptor-xml.xsd">

    <entity-type>org.yes.cart.domain.entity.Attribute</entity-type>

    <export-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name>target/attributes_export-{timestamp}.xml</file-name>
    </export-file-descriptor>

    <select-cmd>select b from AttributeEntity b where b.attributeGroup = 'PRODUCT'</select-cmd>

    <xml-handler>ATTRIBUTE_PRETTY</xml-handler>

</export-descriptor>