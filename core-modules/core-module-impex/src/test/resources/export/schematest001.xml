<export-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="file:../../../../../../domain-api/src/main/resources/META-INF/schema/export-descriptor.xsd">

    <context>
        <shop-code>SHOP10</shop-code>
    </context>

    <entity-type>org.yes.cart.domain.entity.Attribute</entity-type>

    <export-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name>attributenames.csv</file-name>
        <print-header>true</print-header>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </export-file-descriptor>

    <select-sql>select b from AttributeEntity b where b.code = {code}</select-sql>

    <export-columns>

        <column-descriptor>
            <column-header>Group</column-header>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.AttributeGroup</entity-type>
            <name>attributeGroup</name>
            <context>CTX001</context>
            <lookup-query>select b from AttributeGroupEntity b where b.code = {attributeGroup}</lookup-query>
        </column-descriptor>

        <column-descriptor> <!-- primary key -->
            <column-header>Code</column-header>
            <field-type>FIELD</field-type>
            <name>code</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-header>Name</column-header>
            <field-type>FIELD</field-type>
            <name>name</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-header>Description</column-header>
            <field-type>FIELD</field-type>
            <name>description</name>
            <value-regex>(.{0,4000})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-header>Display Name En</column-header>
            <field-type>FIELD</field-type>
            <name>displayName</name>
            <language>en</language>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-header>Display Name Ru</column-header>
            <field-type>FIELD</field-type>
            <name>displayName</name>
            <language>ru</language>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-template>Rus: $1</value-regex-template>
        </column-descriptor>

        <column-descriptor>
            <column-header>Mandatory</column-header>
            <field-type>FIELD</field-type>
            <data-type>BOOLEAN</data-type>
            <name>mandatory</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Allow duplicate</column-header>
            <field-type>FIELD</field-type>
            <data-type>BOOLEAN</data-type>
            <name>allowduplicate</name>
            <value-constant>false</value-constant>
        </column-descriptor>

        <column-descriptor>
            <column-header>Allow Failover</column-header>
            <field-type>FIELD</field-type>
            <data-type>BOOLEAN</data-type>
            <name>allowfailover</name>
            <value-constant>false</value-constant>
        </column-descriptor>

        <column-descriptor>
            <column-header>Rank</column-header>
            <field-type>FIELD</field-type>
            <data-type>INT</data-type>
            <name>rank</name>
            <value-constant>500</value-constant>
        </column-descriptor>

        <column-descriptor>
            <column-header>Entety Type</column-header>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.Etype</entity-type>
            <name>etype</name>
            <lookup-query>select b from EtypeEntity b where b.businesstype = 'String'</lookup-query>
        </column-descriptor>

    </export-columns>
</export-descriptor>